<resources>

    <!-- Base application theme. -->
    <style name="ShuffleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:indeterminateTint">@android:color/white</item>
    </style>

    <style name="ShuffleTheme.NoTitleBar" parent="ShuffleTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SongNameText" parent="BaseTextAppearance">
        <item name="android:textColor">@color/song_item_name</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="SongInfoText" parent="BaseTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="ErrorText" parent="BaseTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
